<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns   = "http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class = "Maui.SorteioJusto.Pages.PageTimeEdicao"
             Title   = "Editar Equipe">
    
    <VerticalStackLayout Spacing="30">

        <Label Text="Time 1" FontSize="25" HorizontalOptions="Center"/>
        <Border StrokeThickness="3" BackgroundColor="LightGreen" HorizontalOptions="Center" WidthRequest="300">
            <!--TIME PARA EDIÇÃO 1-->
            <CollectionView x:Name = "_collectionView1" ItemsSource = "{Binding TimeParaEdicao1.ListaJogadores}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label
                                Grid.Column    ="0"
                                Text           = "{Binding Nome}"
                                FontSize       = "15"
                                FontAttributes = "Bold"/>
                                <ImageButton 
                                Grid.Column="1"
                                Source="imagem_seta1.png"
                                WidthRequest="35" 
                                HeightRequest="35" 
                                Clicked="Button_MoverJogador"/>
                            </Grid>

                            <BoxView
                            Color             = "Gray"
                            HeightRequest     = "2"
                            HorizontalOptions = "Fill"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>       


        <!--TIME PARA EDIÇÃO 2-->
        <Label Text="Time 2" FontSize="25" HorizontalOptions="Center"/>
        <Border StrokeThickness="3" BackgroundColor="LightGreen" HorizontalOptions="Center" WidthRequest="300">
            <CollectionView x:Name = "_collectionView2" ItemsSource = "{Binding TimeParaEdicao2.ListaJogadores}">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" Spacing="15" Margin="15">
                        <Image Source="imagem_sorteio.png" HorizontalOptions="Center" HeightRequest="100"/>
                        <Label 
                            Text                    = "Nenhum Jogador Registrado"
                            FontSize                = "15"
                            HorizontalOptions       = "Center"
                            HorizontalTextAlignment = "Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Grid ColumnDefinitions="*,Auto">
                                <ImageButton 
                                    Grid.Column="0"
                                    Source="imagem_seta2.png"
                                    WidthRequest="35" 
                                    HeightRequest="35" 
                                    HorizontalOptions="Start"
                                    Clicked="Button_MoverJogador"/>
                                <Label
                                    Grid.Column    ="1"
                                    Text           = "{Binding Nome}"
                                    FontSize       = "15"
                                    FontAttributes = "Bold"/>
                            </Grid>
                            <BoxView
                                Color             = "Gray"
                                HeightRequest     = "2"
                                HorizontalOptions = "Fill"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
        
    </VerticalStackLayout>
</ContentPage>

